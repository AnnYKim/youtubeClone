extends layouts/main
block content
  .video-upload
    h3 비디오 수정
    form(action=routes.editVideo(video.id), method="post")
      input(type="text", name="title", placeholder="제목", value=video.title)
      textarea(type="textarea", name="description", placeholder="설명")=video.description
      a(href=routes.deleteVideo(video.id)) 비디오 삭제
      input(type="submit", value="수정 완료")