extends layouts/main
include mixins/videoBlock

block content
  .video__player
    video(src=`/${video.fileUrl}` controls)
    //- 서버에 있는 파일이라 앞에 /가 필요함!
  .video__info
    a(href=routes.editVideo(video.id)) 수정
    h2=video.title
    span=`조회수 ${video.views}`
    p=video.description
  .video__comment
    if video.comments.length === 1
      span.video__comment-number 1 comment
    else
      span.video__comment-number #{video.comments.length} comemnts